<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".NutritionFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/lato_black"
                android:text="Nutrition"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:src="@drawable/food" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center_vertical"
                    android:text="Today's menu"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_vertical"
                    android:text="1st - Pumpkin cream"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_vertical"
                    android:text="2nd - Roast beef with potatoes"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_vertical"
                    android:text="3rd - Apple pie"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <com.db.chart.view.LineChartView
                android:id="@+id/linearChartView"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp">

            </com.db.chart.view.LineChartView>


            <TextView
                android:id="@+id/linearChartlabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_bold"
                android:text="This week kcal burned"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">


            <devlight.io.library.ArcProgressStackView
                android:id="@+id/aspv"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                app:apsv_animated="true"
                app:apsv_animation_duration="1000"
                app:apsv_dragged="true"
                app:apsv_draw_width="75%"
                app:apsv_indicator_orientation="vertical"
                app:apsv_interpolator="@android:anim/bounce_interpolator"
                app:apsv_leveled="true"
                app:apsv_model_bg_enabled="true"
                app:apsv_model_offset="0dp"
                app:apsv_preview_bg="@android:color/background_dark"
                app:apsv_preview_colors="@array/default_preview"
                app:apsv_rounded="true"
                app:apsv_shadow_angle="90"
                app:apsv_shadow_color="#000"
                app:apsv_shadow_distance="0dp"
                app:apsv_shadow_radius="0dp"
                app:apsv_shadowed="true"
                app:apsv_start_angle="270"
                app:apsv_sweep_angle="360"
                app:apsv_text_color="#fff"
                app:apsv_typeface="fonts/agency.ttf" />

            <TextView
                android:id="@+id/aspvLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lato_bold"
                android:text="Macronutrients average"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>