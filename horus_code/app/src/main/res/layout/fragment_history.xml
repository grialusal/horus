<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="40dp"
    tools:context=".HistoryFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/lato_black"
            android:text="History"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:padding="4dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="78 BPM"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@drawable/fire" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="12033 kcal"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@drawable/height" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="169 cm"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                android:padding="10dp"
                android:src="@drawable/weight" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="69 kg"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </LinearLayout>

        <com.db.chart.view.LineChartView
            android:id="@+id/linearChartView"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp">

        </com.db.chart.view.LineChartView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/lato_black"
            android:text="20:45"
            android:textColor="@android:color/white"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/lato_regular"
            android:text="Marzo, 19"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


        <devlight.io.library.ArcProgressStackView
            android:id="@+id/aspv"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            app:apsv_animated="true"
            app:apsv_animation_duration="1000"
            app:apsv_dragged="true"
            app:apsv_draw_width="75%"
            app:apsv_indicator_orientation="vertical"
            app:apsv_interpolator="@android:anim/bounce_interpolator"
            app:apsv_leveled="true"
            app:apsv_model_bg_enabled="true"
            app:apsv_model_offset="0dp"
            app:apsv_preview_bg="@android:color/background_dark"
            app:apsv_preview_colors="@array/default_preview"
            app:apsv_rounded="true"
            app:apsv_shadow_angle="90"
            app:apsv_shadow_color="#000"
            app:apsv_shadow_distance="0dp"
            app:apsv_shadow_radius="0dp"
            app:apsv_shadowed="true"
            app:apsv_start_angle="270"
            app:apsv_sweep_angle="360"
            app:apsv_text_color="#fff"
            app:apsv_typeface="fonts/agency.ttf" />
    </LinearLayout>
</FrameLayout>